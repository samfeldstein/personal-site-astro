---
import MenuContent from "./MenuContent.astro";
---

<aside>
  <div class="container">
    <MenuContent />
  </div>
</aside>

<style>
  aside {
    border-right: 1px solid;
    margin-right: 4rem;
    padding-right: 4rem;
    font-size: 1rem;
  }

  aside {
    font-variant: small-caps;
  }

  div.container {
    position: sticky;
    top: 16px;
  }

  @media screen and (max-width: 767px) {
    aside {
      display: none;
    }
  }
</style>
