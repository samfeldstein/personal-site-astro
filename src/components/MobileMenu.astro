---
import SiteNav from "./SiteNav.astro";
import SocialLinks from "./SocialLinks.astro";
---

<details>
  <summary>Menu</summary>
  <div>
    <div class="title">Navigation</div>
    <SiteNav />
    <div class="title">Social</div>
    <SocialLinks />
  </div>
</details>

<style>
  details {
    position: sticky;
    z-index: 1;
    top: 0px;
    background: var(--background-color);
    margin-bottom: 1rem;
    font-variant: small-caps;

    @media screen and (min-width: 768px) {
      display: none;
    }
  }

  details > div {
    padding: 1rem;
    position: absolute;
    top: 100%;
    z-index: 1;
    background-color: var(--background-color);
    width: 100%;
    border-style: solid;
    border-width: 1px;
  }

  summary {
    padding: 0.5em;
    font-variant: small-caps;
    cursor: pointer;
    font-size: 0.75em;
    border-style: solid;
    border-width: 1px;
  }

  hr {
    color: inherit;
    height: 1px;
  }

  .title {
    font-variant: small-caps;
  }
</style>

<style is:global>
  details ul {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
  }
</style>
