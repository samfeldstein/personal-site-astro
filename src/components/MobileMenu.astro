---
import Menu from "./Menu.astro";
---

<details>
  <summary>Menu</summary>
  <Menu />
</details>

<style>
  details {
    position: sticky;
    z-index: 1;
    top: 10px;
    background: var(--background-color);
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }

  summary {
    padding: 0.5em;
    border-style: solid;
    border-width: 1px;

    font-size: var(--font-small);

    cursor: pointer;
  }
</style>
