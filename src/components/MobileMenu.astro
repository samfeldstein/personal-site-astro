---
import MenuContent from "./MenuContent.astro";
---

<details>
  <summary>Menu</summary>
  <div>
    <MenuContent />
  </div>
</details>

<style>
  details {
    position: sticky;
    z-index: 1;
    top: 0px;
    background: var(--background-color);
    margin-bottom: 1rem;

    @media screen and (min-width: 768px) {
      display: none;
    }
  }

  details > div {
    padding: 1rem;
    position: absolute;
    top: 100%;
    z-index: 1;
    background-color: var(--background-color);
    width: 100%;
    border-style: solid;
    border-width: 1px;
  }

  summary {
    padding: 0.5em;
    cursor: pointer;
    border-style: solid;
    border-width: 1px;
  }
</style>

<style is:global>
  details ul {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
  }
</style>
