---
import Menu from "./Menu.astro";
---

<details>
  <summary>Menu</summary>
  <Menu />
</details>

<style>
  details {
    position: sticky;
    z-index: 1;
    top: 0px;
    background: var(--background-color);
    margin-bottom: 1rem;
  }

  summary {
    padding: 0.25em 0.5em;
    border-style: solid;
    border-width: 1px;

    font-size: var(--font-small);

    cursor: pointer;
  }
</style>
