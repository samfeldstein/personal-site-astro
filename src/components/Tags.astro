---
const { tags, path } = Astro.props;
---

<ul class="tags">
  {
    tags.map((tag) => (
      <li>
        <a class="tag" href={`/${path}/tags/${tag}`}>
          <i>#{tag}</i>
        </a>
      </li>
    ))
  }
</ul>

<style>
  ul {
    list-style-type: none;
    padding: 0;
    display: grid;
    gap: 2rem;
  }
</style>
