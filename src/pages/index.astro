---
import Head from "../components/Head.astro";
import SiteFooter from "../components/SiteFooter.astro";

// Styles
import "/src/styles/_index.scss";

// Data
import { site } from "../../config.mjs";
---

<html lang="en-us">
  <Head
    title="Home"
    description={site.description}
    ogTitle="Sam Feldstein's Personal Website"
    ogType="website"
  />
  <body>
    <h1>Hi, I’m <span class="name">Sam Feldstein</span></h1>
    <main id="main-content">
      <section id="intro">
        <p>
          I’m a sometime <a href="/words/">writer</a> and hobbyist <a
            href="/code/">web developer</a
          >. I don’t have a particular objective for this website, but I’ve
          learned a lot from people writing on the internet and I’d like to pay
          it forward.
        </p>
      </section>

      <section id="nav">
        <h2>Navigation</h2>
        <nav>
          <a href="/words/">Words</a>
          <a href="/code/">Code</a>
          <a href="/photos/">Photos</a>
          <a href="/uses/">Uses</a>
          <a href="/blogroll/">Blogroll</a>
          <a href="https://notebook.samfeldstein.xyz/">Notebook</a>
        </nav>
      </section>

      <section>
        <h2>Contact & Social</h2>
        <div class="contact">
          <a href="mailto:sam@samfeldstein.xyz">Email</a>
          <a href="https://github.com/samfeldstein">GitHub</a>
          <a href="/feed.xml">Feed</a>
        </div>
      </section>
    </main>

    <SiteFooter />
  </body>
</html>
