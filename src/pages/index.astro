---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/PageHeader.astro";

import { Image } from "astro:assets";
import talesToTerrifyCover from "../images/tales-to-terrify-cover.jpeg";

const title =
  "This is my website. There are many like it, but this one is mine.";
---

<BaseLayout title="Home" construction>
  <PageHeader title={title} />
  <Image
    src={talesToTerrifyCover}
    alt="Spooky green letters that read 'Tales to Terrify'"
    widths={[240, 540, 720, talesToTerrifyCover.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${talesToTerrifyCover.width}px`}
  />
</BaseLayout>
