];

// const personal = projects.filter((project) => project.name);
// const professional = projects.filter((project) => project.client);
---

<Base>
  <Head
    slot="head"
    title="Code"
    description="Websites and applications, for work and personal projects."
    ogType="website"
  />
  <header>
    <a class="home" href="/">Home</a>
    <hgroup>
      <h1>Code Iâ€™ve Written</h1>
      <p>My coding projects, personal and professional.</p>
      <p>My coding projects, personal and professional.</p>
      <p>My coding projects, personal and professional.</p>
      <p>My coding projects, personal and professional.</p>
      <p>My coding projects, personal and professional.</p>
    </hgroup>
  </header>

  <main id="main-content">
    <ul class="projects">
      {
        projects.map((project) => (
          <li class="project">
            <a class="name" href={project.url || project.source}>
              {project.name || project.client}
            </a>
            <div class="info">
              <span>{project.type} | </span>
              <time>{project.date}</time>
              {project.source && (
                <>
                  <span>|</span>
                  <a href={`${project.source}`}>Source</a>
                </>
              )}
              {project.notes && (
                <>
                  <span>|</span>
                  <a href={`${project.notes}`}>Notes</a>
                </>
              )}
            </div>
          </li>
        ))
      }
    </ul>
  </main>
</Base>
