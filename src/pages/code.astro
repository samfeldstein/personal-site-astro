---
import BaseLayout from "../layouts/BaseLayout.astro";

// Import resume sections
const projects = [
  {
    title: "Regreen Big Bend",
    type: "Website",
    date: "February 2025",
    url: "https://regreenbigbend.com",
    source: "https://github.com/samfeldstein/regreen-big-bend",
  },
  {
    title: "Postoley Dance Ensemble",
    type: "Website",
    date: "February 2025",
    url: "https://danceophile.com",
    source: "https://github.com/samfeldstein/danceophile-studio",
  },
  {
    title: "Digital Notebook",
    type: "Website",
    date: "October 2024",
    url: "https://notebook.samfeldstein.xyz/",
    source: "https://github.com/sameldstein/notebook",
    notes:
      "https://notebook.samfeldstein.xyz/notes/digital-notebook-project-notes/",
  },
  {
    title: "Prairie Rose Arena",
    type: "Website",
    date: "May 2024",
    url: "https://prairierosearena.com/",
    notes: "https://notebook.samfeldstein.xyz/notes/prairie-rose-arena-notes",
  },
  {
    title: "Pairings",
    type: "Web Application",
    date: "May 2024",
    url: "https://pairingapp.netlify.app",
    source: "https://github.com/samfeldstein/pairings",
    notes: "https://notebook.samfeldstein.xyz/notes/pairings-notes",
  },
];

const schema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: "Websites I've Built | Sam Feldstein",
  url: "https://samfeldstein.xyz/code/",
  description:
    "My portfolio of custom websites built for small businesses, creatives, and professionals. I specialize in fast, accessible sites built with modern web technologies.",
  image: "https://samfeldstein.xyz/images/prairie-rose-arena-screenshot.jpg",
};
---

<BaseLayout
  title="Code"
  description="My portfolio of websites and apps."
  schema={schema}
>
  <h1>Code I've Coded</h1>
  <ul class="projects">
    {
      projects.map((item) => (
        <li class="project">
          <a class="name" href={item.url}>
            {item.title}
          </a>
          <div class="info">
            <span>{item.type} | </span>
            <time>{item.date}</time>
            {item.source && (
              <>
                <span>|</span>
                <a href={`${item.source}`}>Source</a>
              </>
            )}
            {item.notes && (
              <>
                <span>|</span>
                <a href={`${item.notes}`}>Notes</a>
              </>
            )}
          </div>
        </li>
      ))
    }
  </ul>
</BaseLayout>

<style>
  ul.projects {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 2rem;
  }

  .info {
    font-size: var(--font-small);
  }

  a {
    &.name {
      font-weight: 700;
      font-size: var(--font-medium);
      text-wrap: balance;
      line-height: 1;
    }
  }
</style>
