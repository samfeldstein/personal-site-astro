  <body>
    <a class="skiplink" href="#main-content">Skip to Content</a>
    <div class="page-container">
      <header>
        <address class="contact print">
          <span>Boulder, CO</span>
          <a href="mailto:sam@samfeldstein.xyz">sam@samfeldstein.xyz</a>
        </address>
        <div class="download">
          <div>Download PDF</div>
          <div>Fancy Version | Plain Text Version</div>
        </div>
        <h1>
          <div class="name">Sam Feldstein.</div>
          <div class="role">Frontend Developer.</div>
        </h1>
        <address class="contact web">
          <span>Boulder, CO</span>
          <a href="https://samfeldstein.xyz">Website</a>
          <a href="https://github.com/samfeldstein">GitHub</a>
          <a href="https://www.linkedin.com/in/samfeldstein">LinkedIn</a>
          <a href="mailto:sam@samfeldstein.xyz">sam@samfeldstein.xyz</a>
        </address>
        <p class="summary">
          Frontend Developer building sites that load fast,<br />work for
          everyone, and live forever.
        </p>

        <nav>
          <div>
            <a href="#skills">Skills</a>
            <a href="#experience">Experience</a>
            <a href="#projects">Projects</a>
          </div>
          <div>
            <a href="#publications">Publications</a>
            <a href="#volunteer">Volunteer</a>
            <a href="#education">Education</a>
          </div>
        </nav>
      </header>
      <main id="main-content">
        <section id="skills">
          <h2>Skills</h2>
          <div class="skills">
            <section id="languages">
              <h3>Languages & Supersets</h3>
              <ul>
                <li>Semantic HTML</li>
                <li>Modern CSS</li>
                <li>Sass</li>
                <li>JavaScript</li>
              </ul>
            </section>

            <section id="tools">
              <h3>Tools & Frameworks</h3>
              <ul>
                <li>Astro</li>
                <li>Eleventy</li>
                <li>Hugo</li>
                <li>WordPress</li>
                <li>Git</li>
                <li>Figma</li>
              </ul>
            </section>

            <section id="performance">
              <h3>Web Performance</h3>
              <ul>
                <li>Static site generation</li>
                <li>Modern image formats</li>
                <li>Font-loading strategies</li>
                <li>Preloading/-fetching/-rendering</li>
                <li>CDN caching strategies</li>
              </ul>
            </section>

            <section id="soft-skills">
              <h3>Soft Skills</h3>
              <ul>
                <li>Communication</li>
                <li>Writing</li>
                <li>Problem-solving</li>
                <li>Collaboration</li>
                <li>Public speaking</li>
              </ul>
            </section>
          </div>
        </section>

        <section id="experience">
          <h2>Experience</h2>
          <div class="experience">
            {
              work.map((job) => (
                <article>
                  <h3>
                    {job.role} {job.employer && `@ ${job.employer}`}
                  </h3>
                  <div class="time">
                    <time>{job.date}</time> | {job.place}
                  </div>
                  <ul>
                    {job.description.map((point) => (
                      // Renders html in the object values
                      <li set:html={point} />
                    ))}
                  </ul>
                </article>
              ))
            }
          </div>
        </section>

        <section id="projects">
          <h2>Projects</h2>
          <div class="projects">
            <section id="regreen">
              <h3>ReGreen Big Bend</h3>
              <div class="time"><time>January 2025 – February 2025</time></div>

              <ul>
                <li>
