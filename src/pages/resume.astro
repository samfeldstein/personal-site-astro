          <div class="education">
            <section>
              <h3>Bachelor of Arts in English & Creative Writing</h3>
              <div class="time">
                <span>The University of Iowa</span> | <time>December 2016</time>
              </div>
            </section>
          </div>
        </section>
      </main>
    </div>
