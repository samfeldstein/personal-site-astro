---
import "/src/styles/_reset.css";
import "/src/styles/_resume.scss";
import "/src/styles/_resume-print.scss";

// Import resume sections
import {
  workHistory,
  projects,
  publications,
  volunteer,
  education,
} from "../../data/resume.js";

// Page info
const info = {
  title: "Creative Developer Résumé",
  description:
    "Sam Feldstein's résumé. Sam is a Creative Web Developer with a year of experience crafting high-performance, user-centric websites for small businesses and professionals.",
  print: "/sam-feldstein-developer-resume.pdf",
};

// Define relevant items
const relevantJobs = [
  "devFreelance",
  "devAssistant",
  "journalistSentinel",
  "managerSentinel",
  "devSentinel",
];
const relevantProjects = ["regreen", "postoley", "prairieRose", "personalSite"];
const relevantVolunteer = ["communityHealthAndEquine", "workaway", "frida"];

// Convert selected keys into an array of job objects
const selectedWork = relevantJobs.map((key) => workHistory[key]);
const selectedProjects = relevantProjects.map((key) => projects[key]);
const selectedVolunteer = relevantVolunteer.map((key) => volunteer[key]);
---

<!doctype html>
<html lang="en" prefix="og:https://ogp.me/ns#">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Icons
      - Guide: https://evilmartians.com/chronicles/how-to-favicon-in-2021-six-files-that-fit-most-needs
      - Favicon generator: https://favicon.io
      - Another favicon generator: https://realfavicongenerator.net/
      - SVG generator: https://formito.com/tools/favicon
      - Image compressor: https://squoosh.app/
      - SVG optimizer: https://jakearchibald.github.io/svgomg/
      - Favicon checker: https://realfavicongenerator.net/favicon_checker  
    -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=3" />
    <link
      rel="icon"
      type="image/png"
      sizes="96x96"
      href="/favicon-96x96.png?v=3"
    />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png?v=3"
    />
    <meta name="apple-mobile-web-app-title" content="Sam Feldstein" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Preload assets -->
    <link
      rel="preload"
      href="/fonts/subset-Lato-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/subset-Lato-Light.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/subset-Lato-Light.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{info.title} | Sam Feldstein</title>
    <meta name="author" content="Sam Feldstein" />
    <meta name="description" content={info.description} />
    <meta property="og:title" content={`${info.title} | Sam Feldstein`} />
    <meta name="twitter:title" content={`${info.title} | Sam Feldstein`} />
    <meta property="og:description" content={info.description} />
    <meta name="twitter:description" content={info.description} />
    <meta property="og:type" content={"website"} />
    <meta property="og:url" content={Astro.url.href} />
    <meta
      property="og:image"
      content="https://samfeldstein.xyz/images/sam-feldstein-open-graph-default.webp"
    />
    <meta
      name="twitter:image"
      content="https://samfeldstein.xyz/images/sam-feldstein-open-graph-default.webp"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Sam Feldstein's Blog"
      href={new URL("feed.xml", Astro.site)}
    />
    <link
      rel="alternate"
      type="application/atom+xml"
      title="Sam Feldstein's Notebook"
      href="https://notebook.samfeldstein.xyz/feed.xml"
    />

    <!-- Turn structured data into JSON string -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "Résumé | Sam Feldstein",
        "url": "https://samfeldstein.xyz/resume/",
        "description": "Sam Feldstein's Résumé. Sam is a Creative Web Developer with a year of experience crafting high-performance, user-centric websites for small businesses and professionals.",
        "image": "https://samfeldstein.xyz/images/sam-feldstein-open-graph-default.webp"
      }
    </script>
  </head>
  <body>
    <a class="skiplink" href="#main-content">Skip to Content</a>
    <div class="page-container">
      <header>
        <address class="print">
          <span>Boulder, CO</span>
          <a href="mailto:sam@samfeldstein.xyz">sam@samfeldstein.xyz</a>
        </address>
        <a
          class="download-link"
          href="/resumes/sam-feldstein-developer-resume.pdf"
          target="_blank">Download PDF</a
        >
        <h1>
          <div class="name">Sam<br /> Feldstein</div>
          <div class="role">Creative<br /> Developer</div>
        </h1>
        <address class="web">
          <span class="location">Boulder, CO</span>
          <a href="/">Website</a>
          <a href="https://github.com/samfeldstein">GitHub</a>
          <a href="https://www.linkedin.com/in/samfeldstein">LinkedIn</a>
          <a href="mailto:sam@samfeldstein.xyz">sam@samfeldstein.xyz</a>
        </address>
        <p class="summary">
          Crafting refined, content-driven websites with a focus on typography,
          layout, and UX.
        </p>

        <nav>
          <div>
            <a href="#skills">Skills</a>
            <a href="#education">Education</a>
            <a href="#experience">Experience</a>
          </div>

          <div>
            <a href="#projects">Projects</a>
            <a href="#publications">Publications</a>
            <a href="#volunteer">Volunteer</a>
          </div>
        </nav>
      </header>
      <main id="main-content">
        <section id="skills">
          <h2>Skills</h2>
          <div class="skills">
            <section id="languages">
              <h3>Web Technologies & Standards</h3>
              <ul>
                <li>Semantic HTML</li>
                <li>Modern CSS</li>
                <li>JavaScript</li>
                <li>Accessibility best practices</li>
              </ul>
            </section>

            <section id="tools">
              <h3>Tools & Frameworks</h3>
              <ul>
                <li>Astro</li>
                <li>Eleventy</li>
                <li>WordPress</li>
                <li>Git</li>
                <li>Figma</li>
              </ul>
            </section>

            <section id="performance">
              <h3>Web Performance</h3>
              <ul>
                <li>Static site generation</li>
                <li>Modern image formats</li>
                <li>Font-loading strategies</li>
                <li>Preloading/-fetching/-rendering</li>
                <li>Headers and caching</li>
              </ul>
            </section>
          </div>
        </section>

        <section id="education">
          <h2>Education</h2>
          <div class="education">
            {
              education.map((entry) => (
                <article>
                  <h3>{entry.degree}</h3>
                  <div class="time">
                    {entry.school} | {entry.city} | <time>{entry.date}</time>
                  </div>
                </article>
              ))
            }
          </div>
        </section>

        <section id="experience">
          <h2>Experience</h2>
          <div class="experience">
            {
              selectedWork.map((job) => (
                <article>
                  <h3>
                    {job.role} {job.employer && `@ ${job.employer}`}
                  </h3>
                  <div class="time">
                    <time>{job.date}</time> | {job.place}
                  </div>
                  <ul>
                    {job.description.map((point) => (
                      // Renders html in the object values
                      <li set:html={point} />
                    ))}
                  </ul>
                </article>
              ))
            }
          </div>
        </section>

        <section id="projects" class="projects break">
          <h2>Projects</h2>
          <div class="projects">
            {
              selectedProjects.map((project) => (
                <article>
                  <h3>{project.title}</h3>
                  <div class="time">
                    <time>{project.date}</time>{" "}
                  </div>
                  <ul>
                    {project.description.map((point) => (
                      <li set:html={point} />
                    ))}
                  </ul>
                </article>
              ))
            }
          </div>
        </section>

        <section id="publications">
          <h2>Publications</h2>
          <ul class="publications">
            {
              publications.map((pub) => (
                <li>
                  <cite class="publication h3">{pub.title}</cite>
                  <div class="info">
                    {pub.medium} | <cite>{pub.outlet}</cite> |{" "}
                    <time>{pub.date}</time>
                  </div>
                </li>
              ))
            }
          </ul>
        </section>

        <section id="volunteer">
          <h2>Volunteer</h2>
          <div class="volunteer">
            {
              selectedVolunteer.map((entry) => (
                <article>
                  <h3>
                    {entry.role} {entry.employer && `@ ${entry.employer}`}
                  </h3>
                  <div class="time">
                    <time>{entry.date}</time>{" "}
                    {entry.place && `| ${entry.place}`}
                  </div>
                  <ul>
                    {entry.description.map((point) => (
                      <li set:html={point} />
                    ))}
                  </ul>
                </article>
              ))
            }
          </div>
        </section>
      </main>
    </div>
  </body>
</html>

<style>
  div.skills {
    justify-content: space-between;
  }
</style>
