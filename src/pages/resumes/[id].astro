  <main id="main-content">
    {
      Object.keys(entry.data.sections || {}).map((sectionKey) => {
        const data = sectionData[sectionKey];

        switch (sectionKey) {
          case "education":
            return (
              <section id="education">
                <h2>Education</h2>
                <div class="education">
                  {data?.map((entry) => (
                    <article>
                      <h3>{entry.school}</h3>
                      <div class="info">
                        {entry.city} | <span>{entry.date}</span>
                      </div>
                      <ul>
                        <li set:html={entry.degree} />
                      </ul>
                    </article>
                  ))}
                </div>
              </section>
            );
          case "skills":
            return (
              <section id="skills">
                <h2>Skills</h2>
                <div class="skills">
                  {data.map(({ category, items }) => (
                    <section>
                      <h3>{category}</h3>
                      <ul class="skills">
                        {items.map((skill) => (
                          <li>{skill}</li>
                        ))}
                      </ul>
                    </section>
                  ))}
                </div>
              </section>
            );

          case "relevantExperience":
            return (
              <section id="relevant-experience">
                <h2>Relevant Experience</h2>
