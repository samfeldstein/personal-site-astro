              </section>
            );

          case "volunteer":
            return (
              <section id="volunteer">
                <h2>Volunteer</h2>
                <div class="volunteer">
                  {data?.map((entry) => (
                    <article>
                      <h3>
                        {entry.role} {entry.employer && `@ ${entry.employer}`}
