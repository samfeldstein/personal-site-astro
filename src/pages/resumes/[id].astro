              </section>
            );

          case "otherExperience":
            return (
              <section id="other-experience">
                <h2>Other Experience</h2>
                <div class="other-experience">
                  {data?.map((job) => (
                    <article>
                      <h3>
                        {job.role} {job.employer && `@ ${job.employer}`}
                      </h3>
                      <div class="info">
                        <span>{job.date}</span> | {job.place}
                      </div>
                      <ul>
                        {job.description?.map((point) => (
                          <li set:html={point} />
