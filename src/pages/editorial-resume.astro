<!doctype html>
<html lang="en" prefix="og:https://ogp.me/ns#">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Icons
      - Guide: https://evilmartians.com/chronicles/how-to-favicon-in-2021-six-files-that-fit-most-needs
      - Favicon generator: https://favicon.io
      - Another favicon generator: https://realfavicongenerator.net/
      - SVG generator: https://formito.com/tools/favicon
      - Image compressor: https://squoosh.app/
      - SVG optimizer: https://jakearchibald.github.io/svgomg/
      - Favicon checker: https://realfavicongenerator.net/favicon_checker  
    -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=3" />
    <link
      rel="icon"
      type="image/png"
      sizes="96x96"
      href="/favicon-96x96.png?v=3"
    />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png?v=3"
    />
    <meta name="apple-mobile-web-app-title" content="Sam Feldstein" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Preload assets -->
    <link
      rel="preload"
      href="/fonts/subset-Lato-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/subset-Lato-Light.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/subset-Lato-Light.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Editorial Résumé | Sam Feldstein</title>
    <meta name="author" content="Sam Feldstein" />
    <meta
      name="description"
      content="Sam Feldstein's résumé. Sam is a Frontend Developer with a year of experience crafting high-performance, user-centric websites for small businesses and professionals."
    />
    <meta property="og:title" content="Résumé | Sam Feldstein" />
    <meta name="twitter:title" content="Résumé | Sam Feldstein" />
    <meta
      property="og:description"
      content="description"
      content="Sam Feldstein's résumé. Sam is a Frontend Developer with a year of experience crafting high-performance, user-centric websites for small businesses and professionals."
    />
    <meta
      name="twitter:description"
      content="description"
      content="Sam Feldstein's résumé. Sam is a Frontend Developer with a year of experience crafting high-performance, user-centric websites for small businesses and professionals."
    />
    <meta property="og:type" content={"website"} />
    <meta property="og:url" content={Astro.url.href} />
    <meta
      property="og:image"
      content="https://samfeldstein.xyz/images/sam-feldstein-open-graph-default.webp"
    />
    <meta
      name="twitter:image"
      content="https://samfeldstein.xyz/images/sam-feldstein-open-graph-default.webp"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Sam Feldstein's Blog"
      href={new URL("feed.xml", Astro.site)}
    />
    <link
      rel="alternate"
      type="application/atom+xml"
      title="Sam Feldstein's Notebook"
      href="https://notebook.samfeldstein.xyz/feed.xml"
    />
  </head>
  <body>
    <a class="skiplink" href="#main-content">Skip to Content</a>
    <div class="page-container">
      <header>
        <address class="print">
          <span>Boulder, CO</span>
          <a href="mailto:sam@samfeldstein.xyz">sam@samfeldstein.xyz</a>
        </address>
        <a
          class="download-link"
          href="/sam-feldstein-editorial-assistant-resume.pdf"
          target="_blank">Download PDF</a
        >
        <h1>
          <div class="name">Sam<br /> Feldstein</div>
          <div class="role">Editorial<br /> Assistant</div>
        </h1>
        <address class="web">
          <span class="location">Boulder, CO</span>
          <a href="/">Website</a>
          <a href="mailto:sam@samfeldstein.xyz">sam@samfeldstein.xyz</a>
        </address>

        <nav>
          <!-- Split into columns -->
          <div>
            <a href="#education">Education</a>
            <a href="#skills">Skills</a>
            <a href="#experience">Experience</a>
          </div>

          <div>
            <a href="#projects">Projects</a>
            <a href="#publications">Publications</a>
            <a href="#volunteer">Volunteer</a>
          </div>
        </nav>
      </header>
      <main id="main-content">
        <section id="education">
          <h2>Education</h2>
          <div class="education">
            {
              education.map((entry) => (
                <article>
                  <h3>{entry.degree}</h3>
                  <div class="time">
                    {entry.school} | {entry.city} | <time>{entry.date}</time>
                  </div>
                </article>
              ))
            }
          </div>
        </section>

        <section id="skills">
          <h2>Skills</h2>
          <div class="skills">
            <section>
              <h3>Editorial</h3>
              <ul>
                <li>Writing</li>
                <li>Proofreading</li>
                <li>Typography and formatting</li>
                <li>Research and fact-checking</li>
              </ul>
            </section>

            <section>
              <h3>Technical</h3>
              <ul>
                <li>Microsoft Word</li>
                <li>Web publishing workflows</li>
                <li>Web Design and Development</li>
                <li>Search Engine Optimization</li>
              </ul>
            </section>
          </div>
        </section>

        <section id="experience">
          <h2>Experience</h2>
          <div class="experience">
            {
              work.map((job) => (
                <article>
                  <h3>
                    {job.role} {job.employer && `@ ${job.employer}`}
                  </h3>
                  <div class="time">
                    <time>{job.date}</time> | {job.place}
                  </div>
                  <ul>
                    {job.description.map((point) => (
                      // Renders html in the object values
                      <li set:html={point} />
                    ))}
                  </ul>
                </article>
              ))
            }
          </div>
        </section>

        <section id="projects" class="projects">
          <h2>Projects</h2>
          <div class="projects">
            {
              projects.map((project) => (
                <article>
                  <h3>{project.title}</h3>
                  <div class="time">
                    <span>{project.type}</span> | <time>{project.date}</time>{" "}
                  </div>
                  <ul>
                    {project.description.map((point) => (
                      <li set:html={point} />
                    ))}
                  </ul>
                </article>
              ))
            }
          </div>
        </section>

        <section id="publications">
          <h2>Publications</h2>
          <ul class="publications">
            {
              publications.map((pub) => (
                <li>
                  <cite class="publication h3">{pub.title}</cite>
                  <div class="info">
                    {pub.medium} | <cite>{pub.outlet}</cite> |{" "}
                    <time>{pub.date}</time>
                  </div>
                </li>
              ))
            }
          </ul>
        </section>

        <section id="volunteer">
          <h2>Volunteer</h2>
          <div class="volunteer">
            {
              volunteer.map((entry) => (
                <article>
                  <h3>
                    {entry.role} {entry.employer && `@ ${entry.employer}`}
                  </h3>
                  <div class="time">
                    <time>{entry.date}</time>{" "}
                    {entry.place && `| ${entry.place}`}
                  </div>
                  <ul>
                    {entry.description.map((point) => (
                      <li set:html={point} />
                    ))}
                  </ul>
                </article>
              ))
            }
          </div>
        </section>
      </main>
    </div>
  </body>
</html>

<style>
  nav {
    margin-top: 6rem;
    margin-bottom: 5rem;
  }

  h2 {
    line-height: 0.6;
  }

  div.skills {
    ul {
      list-style-type: none;
      padding: 0;
    }

    /* Select nested lists */
    li {
      ul {
        padding-left: 1rem;
      }
    }
  }

  @media print {
    body {
      padding-bottom: 0;

      font-family: "Cormorant Garamond";
      font-size: 11px;
    }

    h1 {
      font-variant: normal;
      text-transform: capitalize;
      text-align: center;
      line-height: 1;

      .role {
        font-size: 0.68em;
      }
    }

    h2 {
      margin-top: 1.5rem;
      font-size: 2.25em;
      text-align: right;
    }

    h3,
    .h3 {
      font-size: 1.25em;
    }

    div.skills {
      justify-content: unset;
      gap: 4rem;
    }

    address,
    time,
    .time,
    .info {
      font-size: 0.95em;
    }

    div.volunteer {
      /* Prevent third blank page */
      ul {
        margin-bottom: 0;
      }
    }
  }
</style>
