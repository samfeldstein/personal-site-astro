---
// Components
import BaseHead from "../components/BaseHead.astro";
import ConstructionBanner from "../components/ConstructionBanner.astro";
import MainHeader from "../components/SiteHeader.astro";
import MainFooter from "../components/SiteFooter.astro";

// Variables
const { title, key, description, construction } = Astro.props;
---

<!doctype html>
<html lang="en">
  <BaseHead title={key || title} description={description} />
  <body>
    <a id="skiplink" class="visually-hidden" href="#main-content" aria-label="Skip Link">Skip to Content</a>
    {construction && <ConstructionBanner />}
    <MainHeader />
    <main>
      <slot />
    </main>
    <MainFooter />
  </body>
</html>

<style>
  #skiplink {
    position: absolute;
    left: -1000%;
  }
</style>
