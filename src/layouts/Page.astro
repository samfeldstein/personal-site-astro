---
import Base from "./Base.astro";
import Contents from "../components/Contents.astro";
const { frontmatter, headings } = Astro.props;
---

<Base pageTitle={frontmatter.title} description={frontmatter.description}>
  <p class="updated">
    This page was updated on <span class="time">{frontmatter.updated}</span>.
  </p>
  <Contents headings={headings} />
  <hr />
  <slot />
</Base>

<style>
  .updated {
    font-style: italic;
  }

  .time {
    font-family: monospace;
    font-style: normal;
    font-weight: bold;
    font-size: inherit;
  }
</style>
