---
// Layout
// Must be imported before stylesheet or base styles will take precedence
import BaseLayout from "./BaseLayout.astro";

// Components
import Tags from "../components/Tags.astro";
import Date from "../components/Date.astro";

// Styles
// A literary theme that looks like a book might be nice
import "/src/styles/post.scss";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <article>
    <header class="header-page" aria-label="Page Header">
      <h1>{frontmatter.title}</h1>
      {
        frontmatter.description && (
          <p class="description">{frontmatter.description}</p>
        )
      }
      <Tags tags={frontmatter.tags} />
    </header>
    <slot />
    <div class="dateline">
      <Date date={frontmatter.pubDate} />
      <div class="location">{frontmatter.location}</div>
    </div>
  </article>
</BaseLayout>

<style>
  header {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .description {
    font-style: italic;
    margin: 0;
  }

  .location {
    font-size: 0.7rem;
  }

  .dateline {
    font-size: 0.7rem;
    text-align: right;
  }
</style>
