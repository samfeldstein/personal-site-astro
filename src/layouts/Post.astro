---
import BaseLayout from "./BaseLayout.astro";

// Components
import PageHeader from "../components/PageHeader.astro";
import Date from "../components/Date.astro";

const { frontmatter, collection } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description} ogType="article">
  <article>
    <PageHeader
      title={frontmatter.title}
      description={frontmatter.description}
      collection={collection}
      tags={frontmatter.tags}
    />
    <slot />
    <div class="dateline text-right">
      <i>
        <Date date={frontmatter.pubDate} />
        <div class="location">{frontmatter.location}</div>
      </i>
    </div>
  </article>
</BaseLayout>

<style>
  .dateline {
    font-size: 0.75em;
    margin-top: 4rem;
  }
</style>

<style is:global>
  .page-header {
    border-bottom: 1px dotted;
    padding-bottom: 1rem;
  }

  .tags {
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
    font-size: 1rem;
  }
</style>
