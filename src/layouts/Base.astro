---
import "/src/styles/styles.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Skiplink from "../components/Skiplink.astro";

const siteDescription =
  "Sam Feldstein's personal website. Sam is a web developer from Bondurant, IA.";

const { pageTitle } = Astro.props;
const { description } = Astro.props;
const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Icons
      - https://evilmartians.com/chronicles/how-to-favicon-in-2021-six-files-that-fit-most-needs
      - Favicon generator: https://realfavicongenerator.net/
      - SVG generator: https://formito.com/tools/favicon
      - Image compressor: https://squoosh.app/
      - SVG optimizer: https://jakearchibald.github.io/svgomg/
      - Favicon checker: https://realfavicongenerator.net/favicon_checker  
    -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle || frontmatter.title}</title>
    <meta name="description" content={description || siteDescription} />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Sam Feldstein"
      href={new URL("feed.xml", Astro.site)}
    />
  </head>

  <body>
    <Skiplink />
    <Header />
    <main id="main-content">
      <h1>{pageTitle || frontmatter.title}</h1>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html {
    @media screen and (min-width: 800px) {
      /* Base size is set in _reset.scss */
      font-size: 150%;
    }
  }

  body {
    max-width: 40rem;
    padding: 0.5rem;

    @media (prefers-color-scheme: dark) {
      background-color: #000000;
      color: #bebebe;
    }
  }

  main {
    a {
      text-decoration-style: double;
      text-decoration-thickness: 0.08em;
      text-underline-offset: 0.1em;
    }
  }
</style>
